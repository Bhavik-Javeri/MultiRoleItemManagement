@using ItemManagement.Models.ViewModels
@model ItemManagement.Models.ViewModels.OrderApprovalRequest

@{
    ViewData["Title"] = "Approve Order";
}

<div class="container mt-4">
    <h2>Approve Order</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="ApproveOrder" method="post">
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group">
                    <label asp-for="NewStatus">Status</label>
                    <select asp-for="NewStatus" class="form-control">
                        <option value="@OrderStatus.Approved">Approve</option>
                        <option value="@OrderStatus.Rejected">Reject</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Comments">Comments</label>
                    <textarea asp-for="Comments" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="ListOrders" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div> 