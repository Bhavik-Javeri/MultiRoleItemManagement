@model ItemManagement.Models.ViewModels.StoreViewModel

@{
    Layout = "_Layout";
}


<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">Store Details</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="Store Image" class="img-fluid rounded" style="max-height: 200px;" />
                            }
                            else
                            {
                                <div class="bg-light rounded p-4 text-center">
                                    <i class="fas fa-store fa-4x text-muted"></i>
                                    <p class="mt-2 text-muted">No image available</p>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h4 class="mb-3">@Model.Name</h4>
                            <div class="mb-2">
                                <strong>Status:</strong>
                                <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                            <div class="mb-2">
                                <strong>Email:</strong> @Model.Email
                            </div>
                            <div class="mb-2">
                                <strong>Contact:</strong> @Model.ContactNumber
                            </div>
                            <div class="mb-2">
                                <strong>Hours:</strong> @Model.OpeningHours.ToString(@"hh\:mm") - @Model.ClosingHours.ToString(@"hh\:mm")
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="mb-3">Location</h5>
                            <div class="mb-2">
                                <strong>Address:</strong> @Model.Address
                            </div>
                            <div class="mb-2">
                                <strong>City:</strong> @Model.City
                            </div>
                            <div class="mb-2">
                                <strong>State:</strong> @Model.State
                            </div>
                            <div class="mb-2">
                                <strong>Country:</strong> @Model.Country
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="mb-3">Additional Information</h5>
                            <div class="mb-2">
                                <strong>Created Date:</strong> @Model.CreateDate.ToString("MMM dd, yyyy")
                            </div>
                            <div class="mb-2">
                                <strong>Total Users:</strong> @(Model.UserCount - 1)
                            </div>

                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="EditStore" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="StoreList" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 